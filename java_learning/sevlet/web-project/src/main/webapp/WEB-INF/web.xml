<?xml version="1.0" encoding="GBK"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  metadata-complete="true" version="3.0">
  
  <listener>
    <listener-class>com.shawn.study.java.web.listener.ApplicationContextListener</listener-class>
  </listener>
  
  <listener>
    <listener-class>com.shawn.study.java.web.listener.TestingListener</listener-class>
  </listener>

  <filter>
    <filter-name>CharsetEncodingFilter</filter-name>
    <filter-class>com.shawn.study.java.web.filter.CharacterFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>CharsetEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
    <dispatcher>ERROR</dispatcher>
  </filter-mapping>

  <servlet>
    <init-param>
      <param-name>scanPackage</param-name>
      <param-value>com.shawn.study.java.web.controller</param-value>
    </init-param>
    <servlet-name>dispatcherServlet</servlet-name>
    <servlet-class>com.shawn.study.java.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>dispatcherServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>/</welcome-file>
    <welcome-file>/index</welcome-file>
    <welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>

  <resource-ref>
    <description>datasource for jndi demo</description>
    <res-ref-name>jdbc/datasource</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <resource-env-ref>
    <resource-env-ref-name>bean/jdbcTemplate</resource-env-ref-name>
    <resource-env-ref-type>com.shawn.study.java.web.db.JdbcTemplate</resource-env-ref-type>
  </resource-env-ref>

  <resource-env-ref>
    <resource-env-ref-name>bean/userDao</resource-env-ref-name>
    <resource-env-ref-type>com.shawn.study.java.web.dao.UserDaoImpl</resource-env-ref-type>
  </resource-env-ref>

  <resource-env-ref>
    <resource-env-ref-name>bean/entityManager</resource-env-ref-name>
    <resource-env-ref-type>com.shawn.study.java.web.jpa.DelegatingEntityManager</resource-env-ref-type>
  </resource-env-ref>

</web-app>
