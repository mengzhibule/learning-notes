<?xml version="1.0" encoding="UTF-8"?>
<Context>

  <Resource name="jdbc/datasource"
    type="javax.sql.DataSource" auth="Container"
    description="mysql database for jndi demo"
    maxActive="100" maxIdle="30" maxWait="10000"
    username="root" password="123456"
    driverClassName="com.mysql.cj.jdbc.Driver"
    url="jdbc:mysql://127.0.0.1:3306/practice?useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=GMT%2B8"/>

  <Resource name="bean/jdbcTemplate" auth="Container"
    type="com.shawn.study.java.web.db.JdbcTemplate"
    factory="org.apache.naming.factory.BeanFactory"/>

  <Resource name="bean/userDao" auth="Container"
    type="com.shawn.study.java.web.dao.UserDaoImpl"
    factory="org.apache.naming.factory.BeanFactory"/>

</Context>